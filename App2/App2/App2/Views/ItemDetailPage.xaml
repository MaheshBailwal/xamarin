<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Name:" FontSize="Medium" />
        <Label Text="{Binding Item.Name}" FontSize="Small"/>
       
        <Label Text="Description:" FontSize="Medium" />
        <Label Text="{Binding Item.Notes}" FontSize="Small"/>

        <Label Text="Interval:" FontSize="Medium" />
        <Label Text="{Binding Item.IntervalInMinutes}" FontSize="Small"/>

        <Label Text="Verbiration Duration:" FontSize="Medium" />
        <Label Text="{Binding Item.IntervalInMinutes}" FontSize="Small"/>

    </StackLayout>
</ContentPage>